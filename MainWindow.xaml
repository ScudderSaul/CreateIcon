<Window x:Class="CreateIcon.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Icon Creator" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="8">
            <Button x:Name="BtnLoadAndCreate"
                    Width="180"
                    Height="32"
                    Padding="8,4"
                    Click="BtnLoadAndCreate_Click"
                    Content="Create Icon From PNG"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1"
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto"
                      Background="#1E1E1E"
                      Padding="12">
            <Canvas x:Name="IconCanvas"
                    Width="256"
                    Height="256"
                    Background="Transparent">
                <!-- Default sample content (can be replaced when PNG is loaded) -->
                <Rectangle Width="256" Height="256" Fill="#202020" RadiusX="40" RadiusY="40"/>
                <Rectangle Canvas.Left="28" Canvas.Top="28" Width="200" Height="140"
                           Fill="#101010" Stroke="#4090FF" StrokeThickness="4"
                           RadiusX="8" RadiusY="8"/>
                <Path Fill="#4090FF" Data="M 100,73 L 100,123 L 156,98 Z"/>
                <Path Fill="#80FFFFFF"
                      Data="M28,188 C48,168 68,208 88,188 C108,168 128,208 148,188 C168,168 188,208 208,188 C228,168 228,188 228,188 L228,208 L28,208 Z"/>
                <TextBlock Canvas.Left="96" Canvas.Top="208"
                           FontFamily="Segoe UI"
                           FontWeight="Bold"
                           FontSize="28"
                           Foreground="White"
                           Text="MP4"/>
            </Canvas>
        </ScrollViewer>
    </Grid>
</Window>
